{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "ip-address": {
        "title": "ip-address",
        "type": "string",
        "description": "IP address in v4 or v6 format",
        "minLength": 1,
        "maxLength": 250,
        "pattern": "^((([0-9A-Fa-f]{0,4}:){0,6})(\\d{1,3}\\.){3}\\d{1,3})|(([0-9A-Fa-f]{0,4}:){1,7}[0-9A-Fa-f]{1,4})$"
      }
    }
}